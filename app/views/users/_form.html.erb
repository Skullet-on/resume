<%= form_for @user, html: { class: 'form-horizontal', multipart: true } do |f| %>
  <div class="form-group">
    <%= f.label :image, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.file_field :image, class: 'file_field' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :email, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :fitst_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :first_name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :last_name, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthday, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.date_select(:birthday, start_year: 1940, end_year: Time.now.year) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :country, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :country, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :city, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :phone, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :skype, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :skype, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :git, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :git, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, class: 'btn btn-custom' %>
      <%= link_to t('.cancel', default: t("helpers.links.cancel")),
                  user_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
