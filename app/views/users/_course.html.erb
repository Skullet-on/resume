<% @user.courses.each do |i| %>
  <dl class="dl-horizontal">
    <dt class="primary">Title</dt>
    <dd><%= i.title %></dd>
    <dt class="primary">Awarded</dt>
    <dd><%= i.award %></dd>
    <% if can? :update, i %>
      <dt class="primary">Action</dt>
      <dd><%= link_to "Edit", edit_course_path(i), class: 'btn btn-primary btn-xs' %>
      <%= link_to "Destroy", course_path(i), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-xs' %></dd>
    <% end %>
  </dl>
<% end %>