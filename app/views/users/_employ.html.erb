<% @user.employs.each do |i| %>
  <dl class="dl-horizontal">
    <dt class="primary">Date</dt>
    <dd><%= i.date_start.strftime("%B  %Y") %> - <%= i.date_finish.strftime("%B  %Y") %></dd>
    <dt class="primary">Organisation</dt>
    <dd><%= i.organization %></dd>
    <dt class="primary">Position</dt>
    <dd><%= i.position %></dd>
    <dt class="primary">Responsibility</dt>
    <dd><%= i.responsibility %></dd>
    <% if can? :edit, @user %>
      <dt class="primary">Action</dt>
      <dd><%= link_to "Edit", edit_employ_path(i), class: 'btn btn-primary btn-xs' %>
      <%= link_to "Destroy", employ_path(i), method: 'delete', data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) }, class: 'btn btn-danger btn-xs' %></dd>
    <% end %>
  </dl>
<% end %>