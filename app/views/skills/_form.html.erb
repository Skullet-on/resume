<%= form_for(@skill) do |f| %>
  <% if @skill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h2>

      <ul>
      <% @skill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="table">
    <tbody>
      <tr>
        <td>Technology: <%= f.text_field :technology, class: "form-control" %></td>
        <td>Years of Experience: <%= f.number_field :exp, class: "form-control" %></td>
        <td>Proficiency:
        <%= f.select :proficiency,
            options_for_select(['basic','good','advanced'], params[:proficiency]),
            {}, { :class => 'form-control span3 controls controls-row' } %></td>
        <td><br><%= f.submit "Accept", class: "form-control" %></td>
      </tr>
    </tbody>
  </table>
<% end %>

