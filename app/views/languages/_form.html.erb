<%= form_for(@language) do |f| %>
  <% if @language.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@language.errors.count, "error") %> prohibited this language from being saved:</h2>

      <ul>
      <% @language.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table">
    <tbody>
      <tr>
        <td>Language: <%= f.text_field :name, class: "form-control" %></td>
        <td>Level:
        <%= f.select :level,
            options_for_select(['basic','good','advanced'], params[:level]),
            {}, { :class => 'form-control span3 controls controls-row' } %></td>
        <td><br><%= f.submit "Accept", class: "form-control" %></td>
      </tr>
    </tbody>
  </table>
<% end %>
